{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "alwaysStrict": true,
    "noImplicitThis": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "outDir": "./lib",
    "rootDir": "./src",
    "declarationDir": "./types",
    "declaration": true,
    "noImplicitAny": true,
    "strict": true
  },
  "include": ["./src/*.tsx"],
  "exclude": ["node_modules"]
}
